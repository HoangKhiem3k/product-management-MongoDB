<% include ../layouts/adminHeader %>
  <h1>ADD NEW PAGE</h1>
  <a href="/admin-pages" class="btn btn-info mb-4">Back to all pages</a>
  <form action="/admin-pages/add-page" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text"
        class="form-control" name="title" id="title" placeholder="Enter title" value=<%=title%>>
    </div>
    <div class="form-group">
      <label for="slug">Slug</label>
      <input type="text"
        class="form-control" name="slug" id="slug" placeholder="Enter slug" value=<%=slug%>>
    </div>
    <div class="form-group">
      <label for="slug">Content</label>
      <label for="content"></label>
      <textarea class="form-control" name="content" id="content" rows="3"  placeholder="Enter Content"><%=content%></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
<% include ../layouts/adminFooter %> 